<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stuart.drivercoach.MainActivity"
    android:background="@drawable/login"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in"
        android:id="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up"
        android:onClick="sign_up"
        android:id="@+id/signup"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <ImageView
        android:layout_width="156dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/steeringwheel"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/login"
        android:layout_toStartOf="@+id/login" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/drivercoach"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3" />

    <EditText
        android:background="@drawable/password"
        android:paddingLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:hint=" Password"
        android:textColorHint="#000"
        android:textColor="#000"

        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Forgot your password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="71dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true" />

    <EditText
        android:background="@drawable/email"
        android:paddingLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/email"
        android:inputType="text"
        android:hint="   Email Address"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_above="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginBottom="21dp" />


    android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

</RelativeLayout>

